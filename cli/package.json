{
  "name": "smelly-cli",
  "version": "0.0.2",
  "private": false,
  "description": "Find out the smells in your tests, suggestions for correction and the theory behind them",
  "main": "dist/cli.js",
  "types": "./types/src/index.d.ts",
  "dependencies": {
    "esprima": "^4.0.1"
  },
  "repository": {
    "url": "https://github.com/marabesi/smelly-test/tree/main/cli"
  },
  "devDependencies": {
    "@types/esprima": "^4.0.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.19.44",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.1.4",
    "nyc": "^15.1.0",
    "ts-loader": "*",
    "ts-node": "^10.9.2",
    "webpack": "*",
    "webpack-cli": "*"
  },
  "scripts": {
    "compile": "webpack",
    "watch": "webpack --watch",
    "clean": "rm -rf out/ dist/ types/",
    "compile-tests": "npm run clean && tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint . --ext ts",
    "test": "mocha -r ts-node/register ./**/**.test.ts",
    "test:watch": "nodemon --exec 'npm run test' --watch 'src/**' --ext 'ts' --delay 5",
    "test:coverage": "nyc --reporter=lcov mocha -r ts-node/register ./**/**.test.ts",
    "coveralls": "npm run test:coverage && coveralls --verbose < coverage/lcov.info",
    "cli": "ts-node bin/find-smells.ts"
  },
  "author": {
    "name": "Matheus Marabesi",
    "url": "https://marabesi.com"
  },
  "license": "ISC"
}
