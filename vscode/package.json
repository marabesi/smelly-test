{
  "name": "smelly-test",
  "private": true,
  "displayName": "Smelly test",
  "description": "Find out the smells in your tests, suggestions for correction and the theory behind them",
  "icon": "images/icon.png",
  "version": "0.0.20",
  "repository": {
    "url": "https://github.com/marabesi/smelly-test/tree/main/vscode"
  },
  "publisher": "marabesi",
  "browser": "./dist/extension.js",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Testing",
    "Programming Languages",
    "Other"
  ],
  "license": "SEE LICENSE IN LICENSE",
  "keywords": [
    "test",
    "smells",
    "tdd",
    "javascript",
    "typescript"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onLanguage",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "smelly",
        "properties": {
          "smelly.color": {
            "type": [
              "string",
              "undefined"
            ],
            "default": "#B22222"
          },
          "smelly.fileTestIdentifier": {
            "type": [
              "string",
              "undefined"
            ],
            "default": "(my|test|spec)",
            "description": "Defines the file key that smelly should use to find smells"
          },
          "smelly.debug": {
            "type": [
              "boolean",
              "undefined"
            ],
            "default": false,
            "description": "Enables more verbose output in the developer tools console"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "extension.smelly-test.find-smells",
        "title": "Is my test smelly?"
      }
    ]
  },
  "scripts": {
    "generate:vsix": "vsce package",
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "clean": "rm -rf out/ dist/",
    "compile-tests": "npm run clean && tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:all": "npm run test",
    "test:watch:all": "nodemon --exec 'npm run test' --watch 'src/**' --ext 'ts' --delay 5",
    "coveralls": "npm run test:coverage && coveralls --verbose < coverage/lcov.info"
  },
  "devDependencies": {
    "@types/esprima": "^4.0.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "*",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.34.0",
    "glob": "^11.0.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.1.4",
    "nyc": "^15.1.0",
    "ts-loader": "*",
    "webpack": "*",
    "webpack-cli": "*"
  },
  "dependencies": {
    "@vscode/extension-telemetry": "^0.9.6",
    "dotenv": "^16.4.5",
    "esprima": "^4.0.1",
    "hex-rgb": "^5.0.0",
    "smelly-detector": "*",
    "ts-node": "^10.9.2"
  },
  "pricing": "Free",
  "sponsor": {
    "url": "https://github.com/sponsors/marabesi"
  },
  "overrides": {
    "minimatch": "5.1.2"
  }
}
